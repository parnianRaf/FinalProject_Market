@using FinalProject_Market.Areas.Customer.Models.ViewModels
@model AddOfferViewModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<div asp-validation-summary="All"></div>
<form method="post" action="/action_page.php">
    <div class="mb-3 mt-3">
        <input asp-for="AuctionId" hidden class="form-control" rows="5" />
    </div>
    <div class="mb-3 mt-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" type="text"/>
    </div>
    <button asp-controller="CustomerManagement" asp-action="AddOffer" type="submit" class="btn btn-primary">Submit</button>
</form>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>