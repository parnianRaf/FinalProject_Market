@using FinalProject_Market.Areas.Customer.Models.ViewModels
@model AddCommentViewModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<div asp-validation-summary="All"></div>
<div class="m-4 p-3 border" style="direction:rtl; font-size:x-large;">
    <form method="post" action="/action_page.php">
        <div class="mb-3 mt-3">
            <input asp-for="OrderId" hidden class="form-control" rows="5" id="comment"/>
        </div>
        <div class="mb-3 mt-3">
            <label asp-for="CommentByCostumer"></label>
            <div class="row col-md-6">
                <textarea asp-for="CommentByCostumer" class="form-control " rows="5" id="comment"></textarea>
            </div>

        </div>
        <button asp-controller="CustomerManagement" asp-action="AddComment" type="submit" class="btn btn-primary">ثبت نظر</button>
    </form>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</div>
