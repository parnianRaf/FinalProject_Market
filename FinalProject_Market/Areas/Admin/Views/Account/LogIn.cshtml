
@model LogInViewModel
<!doctype html>
<html lang="fa">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/css/style.css">

</head>
<body>



    <div class="content">
        <div class="container" style="direction: rtl;">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/images/undraw_remotely_2j6y.svg" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-6 contents">
                    <div class="row">
                        <div class="col-md-8" style="direction:rtl">
                            <div class="row">
                                <div class="mb-4 ">
                                    <div class="justify-content-start">
                                        <h3>همکار گرامی جهت ورود اطلاعاتتان را وارد کنید.</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="justify-content-start" asp-validation-summary="All" style="color:blueviolet"></div>
                            </div>
                          
                            <form action="#" method="post">

                                <div class="form-group first">
                                    <label asp-for="UserName"></label>
                                    <input type="text" asp-for="UserName" class="form-control" id="username">
                                </div>
                                <div class="form-group last mb-4">
                                    <label asp-for="Password"></label>
                                    <input type="password" asp-for="Password" class="form-control" id="password">
                                </div>

                                <div class="d-flex mb-5 align-items-center">
                                    <label class="control control--checkbox mb-0">
                                        <label class="caption" asp-for="IsRememberMe"></label>
                                        <input type="checkbox" asp-for="IsRememberMe" checked="checked" />
                                        <div class="control__indicator"></div>
                                    </label>
                                    <span class="mr-auto"><a href="#" class="forgot-pass " style="text-decoration: none;">فراموشی رمز عبور</a></span>
                                </div>

                                <button type="submit" class="btn btn-block btn-primary" asp-controller="Account" asp-action="LogIn" asp-route-id="3">ورود</button>

                                <span class="d-block text-right my-4 text-muted"> ورود با : </span>

                                <div class="social-login">
                                    <a href="#" class="facebook">
                                        <span class="icon-facebook mr-3"></span>
                                    </a>
                                    <a href="#" class="twitter">
                                        <span class="icon-twitter mr-3"></span>
                                    </a>
                                    <a id="GoogleIcon" href="#" class="google">
                                        <span class="icon-google mr-3"></span>
                                    </a>
                                </div>
                            </form>
                        
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
    <!-- Main JS File -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>

