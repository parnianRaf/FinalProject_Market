@using FinalProject_Market.Models.ViewModels

@model AddProductViewModel


<form class="form-control" method="post" enctype="multipart/form-data">
    <div class="form-control row">
        <label asp-for="ProductName"></label>
        <input type="text" asp-for="ProductName" />
        <span asp-validation-for="ProductName"></span>
    </div>
    <div class="form-control row">
        <label asp-for="Price"></label>
        <input type="text" asp-for="Price" />
        <span asp-validation-for="Price"></span>
    </div>

    <div class="form-control row">
        <label asp-for="fileImage"></label>
        <input type="text" asp-for="fileImage" />
        <span asp-validation-for="fileImage"></span>
    </div>

</form>


